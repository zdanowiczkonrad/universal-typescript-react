{
  "name": "universal-typescript-react",
  "version": "1.4.0",
  "description": "React + TypeScript + Webpack 4 + Karma + Enzyme + HMR",
  "scripts": {
    "start": "webpack-dev-server --mode development --config webpack.config.dev.js",
    "prebuild": "rimraf dist",
    "build": "webpack --mode production --config webpack.config.js  -p --env=prod",
    "postbuild": "cp index.prod.html dist/index.html",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "test": "karma start --reporters mocha,junit --single-run --browsers PhantomJS"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zdanowiczkonrad/universal-typescript-react.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "typescript",
    "ts",
    "webpack",
    "hmr",
    "karma",
    "starter"
  ],
  "author": "Konrad Zdanowicz",
  "license": "MIT",
  "homepage": "https://github.com/zdanowiczkonrad/universal-typescript-react",
  "devDependencies": {
    "@types/jasmine": "^2.8.6",
    "@types/lodash": "^4.14.106",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.4",
    "@types/react-hot-loader": "^3.0.6",
    "autoprefixer": "^8.2.0",
    "babel-polyfill": "^6.26.0",
    "copyfiles": "^2.0.0",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "jasmine": "^3.1.0",
    "jasmine-core": "^3.1.0",
    "json-loader": "^0.5.7",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.1",
    "karma-junit-reporter": "^1.2.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-notify-reporter": "^1.0.1",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.0",
    "less": "^3.0.1",
    "less-loader": "^4.1.0",
    "node-mv": "^0.1.3",
    "node-sass": "^4.7.2",
